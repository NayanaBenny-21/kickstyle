<div class="container-fluid">
  <div class="row">
    {{> adminSidebar}}

    <div class="col-md-9 ms-auto p-4"> <!-- main content area -->
      <div class="card shadow-sm border-0 rounded-4 p-4">
        <h4 class="mb-4 fw-bold text-dange">Add New Product</h4>

        <!-- Your form starts here -->
        <form id="productForm" action="/admin/products/add" method="POST" enctype="multipart/form-data">
          <div class="row g-3">

            <!-- Product Name -->
            <div class="col-md-6">
              <label class="form-label fw-semibold">Product Name</label>
              <input type="text" name="product_name" class="form-control" placeholder="Enter product name" required>
            </div>

            <!-- Brand -->
            <div class="col-md-6">
              <label class="form-label fw-semibold">Brand</label>
              <input type="text" name="brand" class="form-control" placeholder="Enter brand name">
            </div>

            <!-- Description -->
            <div class="col-12">
              <label class="form-label fw-semibold">Description</label>
              <textarea name="description" class="form-control" rows="3" placeholder="Enter product description"></textarea>
            </div>

            <!-- Category -->
            <div class="col-md-6">
              <label class="form-label fw-semibold">Category</label>
              <select name="category_id" class="form-select" required>
                <option value="" disabled selected>Select a category</option>
                {{#each categories}}
                  <option value="{{this._id}}">{{this.category}}</option>
                {{/each}}
              </select>
            </div>

<div class="col-md-3">
  <label class="form-label fw-semibold">Base Price (₹)</label>
  <input type="number" name="base_price" class="form-control" placeholder="e.g. 999"  min="0" required>
</div>

<div class="col-md-3">
  <label class="form-label fw-semibold">Discount (%)</label>
  <input type="number" name="discount_percentage" class="form-control" placeholder="e.g. 10"  min="0">
</div>

<div class="col-md-3">
  <label class="form-label fw-semibold">Final Price (₹)</label>
  <input type="number" name="finalPrice" class="form-control" placeholder="Final Price" value="0" readonly>
</div>

            <!-- List / Unlist -->
            <div class="col-md-3 d-flex align-items-center">
              <div class="form-check mt-4">
                <input class="form-check-input" type="checkbox" name="isActive" id="isActive">
                <label class="form-check-label" for="isActive">List this product</label>
              </div>
            </div>

            <!-- Main Image -->
            <div class="col-md-6">
              <label class="form-label fw-semibold">Main Image</label>
              <input type="file" name="main" class="form-control" accept="image/*" required>
            </div>

            <!-- Gallery -->
            <div class="col-md-6">
              <label class="form-label fw-semibold">Product Images (Minimum 3)</label>
              <input type="file" id="galleryFiles" name="images" class="form-control" accept="image/*" multiple>
              <div id="preview" class="d-flex flex-wrap mt-2"></div>
          </div>

          <!-- Variants Section -->
          <hr class="my-4">
          <div class="d-flex justify-content-between align-items-center">
            <h5 class="fw-bold text-secondary">Product Variants</h5>
            <button type="button" id="addVariantBtn" class="btn btn-sm btn-outline-primary">
              <i class="bi bi-plus-circle"></i> Add Variant
            </button>
          </div>

<div id="variantContainer" class="mt-3">
  <div class="variant-item d-flex align-items-center gap-2 border p-2 rounded mb-2 bg-light">
    <input type="text" name="variants[0][color]" class="form-control form-control-sm" placeholder="Color">
    <input type="text" name="variants[0][size]" class="form-control form-control-sm" placeholder="Size">
    <input type="text" name="variants[0][sku]" class="form-control form-control-sm" placeholder="SKU">
    <input type="number" name="variants[0][stock]" class="form-control form-control-sm" placeholder="Stock">
     <input type="file" name="variantImages" class="form-control form-control-sm" accept="image/*">      <i class="bi bi-trash"></i>
    </button>
  </div>
</div>

          <!-- Submit -->
          <div class="text-end mt-4">
            <button type="submit" class="btn btn-primary px-4">Add Product</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="/js/admin/addProduct.js"></script>