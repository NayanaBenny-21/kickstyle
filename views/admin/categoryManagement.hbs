<div class="container-fluid">
  <div class="row">
    {{> adminSidebar}}

    <div class="col-10 p-4">

      <!-- Header Section -->
      <div class="d-flex justify-content-between align-items-center mb-2 flex-wrap">
        <h3 class="mb-0">Category Management</h3>

        <div class="d-flex align-items-center gap-2 flex-wrap">
          <!-- Search Bar -->
          <form class="d-flex align-items-center" style="gap: 6px; margin-bottom: 0;">
            <input class="form-control" type="search" placeholder="Search category..." name="search" value="{{search}}" aria-label="Search" style="height: 36px; width: 220px; font-size: 0.9rem; padding: 4px 8px;">
            <button  class="btn btn-outline-success" type="submit" style="height: 36px; padding: 4px 12px; font-size: 0.9rem; line-height: 1;">
              <i class="bi bi-search"></i>
            </button>
          </form>

          <!-- Filter Button -->
          <button class="btn btn-outline-secondary" id="filterBtn" style="height: 36px; font-size: 0.9rem;" >
            <i class="bi bi-funnel"></i> Filter
          </button>

          <!-- Add Category Button -->
          <a 
            href="/admin/categories/add"
            class="btn btn-danger"
            style="height: 36px; font-size: 0.9rem;"
          >
            <i class="bi bi-plus-lg"></i> Add
          </a>
        </div>
      </div>

      <!-- Underline -->
<hr style="height: 6px">
      <!-- Category Table -->
      <table class="table table-bordered mt-2 text-center">
        <thead>
          <tr>
            <th>Category</th>
            <th>Number of Products</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each categories}}
          <tr data-id="{{this._id}}">
            <td>{{this.category}}</td>
            <td>{{this.productCount}}</td>
            <td>
              <span class="status-badge {{#if this.isActive}}active{{else}}blocked{{/if}}">
                {{#if this.isActive}}Active{{else}}Blocked{{/if}}
              </span>
            </td>
<td class="text-center align-middle">
  <div class="d-flex justify-content-center align-items-center gap-2">
    <label class="switch mb-0">
      <input type="checkbox" class="toggle-status" {{#if this.isActive}}checked{{/if}}>
      <span class="slider"></span>
    </label>

    <button class="btn btn-sm btn-outline-primary edit-btn" data-id="{{this._id}}" title="Edit">
      <i class="bi bi-pencil-square"></i>
    </button>

    <button class="btn btn-sm btn-outline-danger delete-btn" data-id="{{this._id}}" title="Delete">
      <i class="bi bi-trash"></i>
    </button>
  </div>
</td>

          </tr>
          {{/each}}
        </tbody>
      </table>

      <!-- Pagination -->
      <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center mt-3" >
          {{#if (gt currentPage 1)}}
            <li class="page-item">
              <a class="page-link" href="?page={{decrement currentPage 1}}">Previous</a>
            </li>
          {{/if}}

          {{#each (range 1 totalPages)}}
            <li class="page-item {{#ifEquals ../currentPage this}}active{{/ifEquals}}">
              <a class="page-link" href="?page={{this}}">{{this}}</a>
            </li>
          {{/each}}

          {{#if (lt currentPage totalPages)}}
            <li class="page-item">
              <a class="page-link" href="?page={{increment currentPage 1}}">Next</a>
            </li>
          {{/if}}
        </ul>
      </nav>
    </div>
  </div>
</div>

<!-- FILTER MODAL -->
<div class="modal fade" id="filterModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Filter Categories</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form id="filterForm">
          <div class="mb-3">
            <label for="statusFilter" class="form-label">Status</label>
            <select class="form-select" id="statusFilter" name="status">
              <option value="">All</option>
              <option value="Active" {{#ifEquals ../selectedStatus "Active"}}selected{{/ifEquals}}>Active</option>
              <option value="Blocked" {{#ifEquals ../selectedStatus "Blocked"}}selected{{/ifEquals}}>Blocked</option>
            </select>
          </div>
          <button type="submit" class="btn btn-primary w-100">Apply Filter</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="/js/admin/categoryManagement.js"></script>
