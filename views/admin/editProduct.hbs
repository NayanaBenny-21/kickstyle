<link rel="stylesheet" href="/css/style1.css">
<div class="container-fluid">
  <div class="row">
    {{> adminSidebar}}

    <div class="col-md-9 ms-auto p-4">
      <div class="card shadow-sm border-0 rounded-4 p-4">
        <h4 class="mb-4 fw-bold text-danger">Edit Product</h4>

        <form id="productForm" action="/admin/products/edit/{{product._id}}" method="POST" enctype="multipart/form-data">
          <div class="row g-3">

            <!-- Product Name -->
            <div class="col-md-6">
              <label class="form-label fw-semibold">Product Name</label>
              <input type="text" name="product_name" class="form-control" value="{{product.product_name}}" required>
            </div>

            <!-- Brand -->
            <div class="col-md-6">
              <label class="form-label fw-semibold">Brand</label>
              <input type="text" name="brand" class="form-control" value="{{product.brand}}">
            </div>

            <!-- Description -->
            <div class="col-12">
              <label class="form-label fw-semibold">Description</label>
              <textarea name="description" class="form-control" rows="3">{{product.description}}</textarea>
            </div>

            <!-- Category -->
            <div class="col-md-6">
              <label class="form-label fw-semibold">Category</label>
              <select name="category_id" class="form-select" required>
                <option value="" disabled>Select a category</option>
                {{#each categories}}
                  <option value="{{this._id}}" {{#ifEquals this._id ../product.category_id}}selected{{/ifEquals}}>{{this.category}}</option>
                {{/each}}
              </select>
            </div>

            <div class="col-md-3">
              <label class="form-label fw-semibold">Base Price (₹)</label>
              <input type="number" name="base_price" class="form-control" value="{{product.base_price}}" min="0" required>
            </div>

            <div class="col-md-3">
              <label class="form-label fw-semibold">Discount (%)</label>
              <input type="number" name="discount_percentage" class="form-control" value="{{product.discount_percentage}}" min="0">
            </div>

            <div class="col-md-3">
              <label class="form-label fw-semibold">Final Price (₹)</label>
              <input type="number" name="finalPrice" class="form-control" value="{{product.final_price}}" readonly>
            </div>

            <!-- List / Unlist -->
            <div class="col-md-3 d-flex align-items-center">
              <div class="form-check mt-4">
                <input class="form-check-input" type="checkbox" name="isActive" id="isActive" {{#if product.isActive}}checked{{/if}}>
                <label class="form-check-label" for="isActive">List this product</label>
              </div>
            </div>

            <!-- Main Image -->
            <div class="col-md-6">
              <label class="form-label fw-semibold">Main Image</label>
              <input type="file" name="main" class="form-control" accept="image/*">
              {{#if product.images.main}}
                <img src="{{product.images.main}}" class="mt-2" width="100">
              {{/if}}
            </div>

            <!-- Gallery -->
            <div class="col-md-6">
              <label>Gallery Images (min 3)</label>
              <input type="file" id="galleryFiles" name="images" class="form-control" multiple accept="image/*">
              <div class="d-flex flex-wrap mt-2" id="galleryContainer">
                {{#each product.images.gallery}}
                  <div class="gallery-image-wrapper" data-image-url="{{this}}">
                    <img src="{{this}}" width="80" height="80" style="object-fit:cover; margin:5px;">
                    <button type="button" class="remove-btn">×</button>
                  </div>
                {{/each}}
              </div>
            </div>

            <!-- Variants Section -->
            <hr class="my-4">
            <div class="d-flex justify-content-between align-items-center">
              <h5 class="fw-bold text-secondary">Product Variants</h5>
              <button type="button" id="addVariantBtn" class="btn btn-sm btn-outline-primary">
                <i class="bi bi-plus-circle"></i> Add Variant
              </button>
            </div>

            <div id="variantContainer" class="mt-3">
              {{#each product.variants}}
                <div class="variant-item d-flex align-items-center gap-2 border p-2 rounded mb-2 bg-light">
                  <input type="text" name="variants[{{@index}}][color]" class="form-control form-control-sm" value="{{this.color}}" placeholder="Color">
                  <input type="text" name="variants[{{@index}}][size]" class="form-control form-control-sm" value="{{this.size}}" placeholder="Size">
                  <input type="text" name="variants[{{@index}}][sku]" class="form-control form-control-sm" value="{{this.sku}}" placeholder="SKU">
                  <input type="number" name="variants[{{@index}}][stock]" class="form-control form-control-sm" value="{{this.stock}}" placeholder="Stock">
                  <!-- all variant files have same name for Multer -->
                  <input type="file" name="variantImages" class="form-control form-control-sm" accept="image/*">
                  <!-- store existing image -->
                  <input type="hidden" name="variants[{{@index}}][existingImage]" value="{{this.image}}">
                  {{#if this.image}}
                    <img src="{{this.image}}" width="50">
                  {{/if}}
                  <button type="button" class="btn btn-outline-danger btn-sm removeVariantBtn">
                    <i class="bi bi-trash"></i>
                  </button>
                </div>
              {{/each}}
            </div>

            <!-- Submit -->
            <div class="text-end mt-4">
              <button type="submit" class="btn btn-primary px-4">Update Product</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="/js/admin/editProduct.js"></script>
