<link rel="stylesheet" href="/css/profile.css">
<div class="container-fluid">
  <div class="row">
<!-- Sidebar -->
      <div class="col-2 sidebar">
        <h4 class="mb-4 text-danger">KICKSTYLE</h4>
  <a href="/admin/dashboard" class="btn btn-danger w-100 mb-2">Dashboard</a>
  <a href="/admin/order-management" class="btn btn-danger w-100 mb-2 active">Orders</a>
  <a href="/admin/product-management" class="btn btn-danger w-100 mb-2 ">Products</a>
  <a href="/admin/sales-report" class="btn btn-danger w-100 mb-2">Sales Report</a>
  <a href="/admin/user-management" class="btn btn-danger w-100 mb-2">Customers</a>
  <a href="/admin/coupon-management" class="btn btn-danger w-100 mb-2">Coupons</a>
  <a href="/admin/category-management" class="btn btn-danger w-100 mb-2">Category</a>
    <a href="/admin/offer-management" class="btn btn-danger w-100 mb-2">Offers</a>

  <button class="btn w-100 mt-3" id="signout_btn" style="background-color: rgb(225, 227, 230);">
    Signout
  </button>
      </div>

    <div class="col-10 p-4">

      <!-- Header -->
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 style="margin-right:44%;">Order Management</h3>

        <!-- Search -->
        <form id="searchForm" class="d-flex me-3" style="width:300px;" method="GET">
          <input type="hidden" name="status" value="{{selectedStatus}}">
          <div class="input-group">
            <span class="input-group-text"><i class="bi bi-search"></i></span>
            <input type="search" name="search" class="form-control" placeholder="Search"
                   value="{{search}}">
          </div>
        </form>

        <!-- Filter Btn -->
        <div>
          <button class="btn btn-outline-secondary me-2" id="filterBtn" style="height:33px;">
            <i class="bi bi-funnel"></i> Filter
          </button>
        </div>
      </div>

      <hr style="height:6px">

      <!-- Orders Table -->
      <table class="table table-bordered mt-4 text-center">
        <thead>
          <tr>
            <th>Order</th>
            <th>Date</th>
            <th>Customer</th>
            <th>Status</th>
            <th>Price</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          {{#each orders}}
          <tr data-id="{{this._id}}">

            <td>
              <div class="text-start">
                <div class="fw-bold">{{this._id}}</div>
              <!--<div style="font-size:13px;">Qty: {{this.totalQuantity}}</div>-->  
              </div>
            </td>

            <td>{{this.date}}</td>
            <td>{{this.customer}}</td>

            <td>
              <span class="status-badge {{this.statusClass}}">
                {{this.status}}
              </span>
            </td>

            <td>â‚¹{{this.totalPrice}}</td>

            <td>
              <a href="/admin/order-management/order-details/{{this._id}}" 
                 class="btn btn-sm btn-outline-danger">
                <i class="bi bi-eye"></i>
              </a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>

      <!-- Pagination -->
      <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center mt-4">

          {{#if (gt currentPage 1)}}
          <li class="page-item">
            <a class="page-link" href="?page={{decrement currentPage 1}}&status={{selectedStatus}}&search={{search}}">
              Previous
            </a>
          </li>
          {{/if}}

          {{#each (range 1 totalPages)}}
          <li class="page-item {{#ifEquals ../currentPage this}}active{{/ifEquals}}">
            <a class="page-link" href="?page={{this}}&status={{../selectedStatus}}&search={{../search}}">
              {{this}}
            </a>
          </li>
          {{/each}}

          {{#if (lt currentPage totalPages)}}
          <li class="page-item">
            <a class="page-link" href="?page={{increment currentPage 1}}&status={{selectedStatus}}&search={{search}}">
              Next
            </a>
          </li>
          {{/if}}

        </ul>
      </nav>
    </div>
  </div>

  <!-- Filter Modal -->
  <div class="modal fade" id="filterModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">

        <div class="modal-header">
          <h5 class="modal-title">Filter Orders</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
          <form id="filterForm" method="GET">
            <input type="hidden" name="search" value="{{search}}">

            <div class="mb-3">
              <label class="form-label">Status</label>
              <select class="form-select" name="status">
                <option value="">All</option>

                <option value="pending"   {{#ifEquals selectedStatus "pending"}}selected{{/ifEquals}}>Pending</option>
                <option value="confirmed" {{#ifEquals selectedStatus "confirmed"}}selected{{/ifEquals}}>Confirmed</option>
                <option value="payment_failed" {{#ifEquals selectedStatus "payment_failed"}}selected{{/ifEquals}}>Payment Failed</option>
                <option value="shipped"   {{#ifEquals selectedStatus "shipped"}}selected{{/ifEquals}}>Shipped</option>
                <option value="in-transit"{{#ifEquals selectedStatus "in-transit"}}selected{{/ifEquals}}>In Transit</option>
                <option value="delivered" {{#ifEquals selectedStatus "delivered"}}selected{{/ifEquals}}>Delivered</option>
                <option value="cancelled" {{#ifEquals selectedStatus "cancelled"}}selected{{/ifEquals}}>Cancelled</option>
                <option value="returned"  {{#ifEquals selectedStatus "returned"}}selected{{/ifEquals}}>Returned</option>
              </select>
            </div>

            <button type="submit" class="btn btn-primary w-100">Apply Filter</button>
          </form>
        </div>

      </div>
    </div>
  </div>

  <style>
    .status-badge.blocked { color:#c62828; border:1px solid #c62828; background:#fde6e6; }
    .status-badge.unlist  { color:#6c757d; border:1px solid #6c757d; background:#f0f0f0; }
    .status-badge.active  { color:#2e7d32; border:1px solid #2e7d32; background:#e6f4ea; }
    .status-badge.list    { color:#ff8f00; border:1px solid #ff8f00; background:#fff8e1; }
    .status-badge.payment_failed {
  color: #c62828;
  border: 1px solid #c62828;
  background: #fde6e6;
  font-weight: bold;
  padding: 2px 6px;
  border-radius: 4px;
}

  </style>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const filterBtn = document.getElementById('filterBtn');
    const modalEl = document.getElementById('filterModal');

    if (filterBtn && modalEl) {
      const modal = new bootstrap.Modal(modalEl);
      filterBtn.addEventListener('click', () => modal.show());
    }
  });
</script>

