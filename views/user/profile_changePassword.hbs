<div class="container my-5 d-flex justify-content-center">
  <div class="bg-white p-4 rounded shadow" style="max-width: 500px; width: 100%;">
    <h4 class="fw-bold mb-4 text-center">Change Password</h4>

    {{#if error}}
      <div class="alert alert-danger">{{error}}</div>
    {{/if}}

    <form action="/profile/change-password" method="POST" id="changePasswordForm">

      <!-- Current Password -->
      <div class="mb-3 position-relative">
        <label for="currentPassword" class="form-label">Current Password <span class="text-danger">*</span></label>
        <div class="input-group">
          <input type="password" class="form-control" id="currentPassword" name="currentPassword" required>
          <span class="input-group-text bg-white password-toggle" id="toggleCurrent">
            <i class="fa-solid fa-eye-slash text-muted" id="currentIcon"></i>
          </span>
        </div>
        <p class="text-danger small" id="error-current"></p>
      </div>

      <!-- New Password -->
      <div class="mb-3 position-relative">
        <label for="newPassword" class="form-label">New Password <span class="text-danger">*</span></label>
        <div class="input-group">
          <input type="password" class="form-control" id="newPassword" name="newPassword" required>
          <span class="input-group-text bg-white password-toggle" id="toggleNew">
            <i class="fa-solid fa-eye-slash text-muted" id="newIcon"></i>
          </span>
        </div>
        <p class="text-danger small" id="error-new"></p>
      </div>

      <!-- Confirm Password -->
      <div class="mb-3 position-relative">
        <label for="confirmPassword" class="form-label">Confirm New Password <span class="text-danger">*</span></label>
        <div class="input-group">
          <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
          <span class="input-group-text bg-white password-toggle" id="toggleConfirm">
            <i class="fa-solid fa-eye-slash text-muted" id="confirmIcon"></i>
          </span>
        </div>
        <p class="text-danger small" id="error-confirm"></p>
      </div>

      <div class="d-grid mt-4">
        <button type="submit" class="btn btn-danger">Update Password</button>
      </div>

      <div class="text-center mt-3">
        <a href="/profile" class="text-decoration-none">‚Üê Back to Profile</a>
      </div>
    </form>
  </div>
</div>

<script src="/js/user/edit_profile.js"></script>
