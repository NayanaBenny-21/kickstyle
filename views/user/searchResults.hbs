<div class="container mt-4">
  <h4>Search results for "{{query}}"</h4>

  {{#if products.length}}
    <div class="row g-4">
      {{#each products}}
        <div class="col-6 col-md-4 col-lg-3 mb-4">
          <a href="/product/{{this._id}}" class="text-decoration-none text-dark">
            <div class="card h-100 shadow-sm position-relative">

              <!-- Wishlist button -->
              <button class="btn btn-light position-absolute top-0 end-0 m-2 wishlist-btn" data-product-id="{{this._id}}">
                <i class="fa-regular fa-heart"></i>
              </button>

              <!-- Product image -->
              <img src="{{this.images.main}}" class="card-img-top" style="height: 300px; object-fit: cover;" alt="{{this.name}}">

              <!-- Card body -->
              <div class="card-body p-2">
                <h6 class="card-title fw-bold mb-1">{{this.brand}}</h6>
                <p class="mb-1" style="font-size: small;">{{this.product_name}}</p>
                <div class="d-flex align-items-center mb-1" style="gap: 0.5rem;">
                  <p class="fw-bold mb-0" style="font-size: small;">Rs. {{this.final_price}}</p>
                  <p class="mb-0 text-muted" style="font-size: small;"><s>Rs. {{this.base_price}}</s></p>
                </div>
                <span class="badge bg-danger">-{{this.discount_percentage}}%</span>
              </div>

            </div>
          </a>
        </div>
      {{/each}}
    </div>
  {{else}}
    <p class="mt-3">No products found for "{{query}}".</p>
  {{/if}}
</div>
