<div class="d-flex justify-content-center align-items-center ">
  <div class="card p-4 shadow-sm" style="max-width: 500px; width: 100%;">
      <h3 class="text-center text-danger mb-3">Registration</h3>
    <p class="text-muted text-center mb-4">
      Please fill in the details to sign up.
    </p>
{{#if general_error}}
  <p class="text-danger">{{general_error}}</p>
{{/if}}
    <form action="/auth/signup" method="POST">
      
      <div class="form-group mb-3">
        <label class="form-label">Full Name <span class="text-danger">*</span></label>
        <input type="text" name="name" id="name" class="form-control" placeholder="Enter full name" required value="{{name}}">
      <p class="error" id="nameError"></p>
      </div>

     
      <div class="form-group mb-3">
        <label class="form-label">Email <span class="text-danger">*</span></label>
        <input type="email" name="email" id="email" class="form-control" placeholder="Enter email" required value="{{email}}">
      <p class="error" id="emailError"></p>
      </div>

    
      <div class="form-group mb-3">
        <label class="form-label">Password <span class="text-danger">*</span></label>
        <input type="password" name="password" id="password" class="form-control" placeholder="Enter password" required
         pattern="(?=.*[A-Za-z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,12}" title="Password must be 8â€“12 characters long and include at least one letter, one number, and one special character.">
       <p class="error" id="passwordError"></p>
      </div>

      <div class="form-group mb-3">
        <label class="form-label">Confirm Password <span class="text-danger">*</span></label>
        <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" placeholder="Enter confirm password" required>
      <p class="error" id="confirmError"></p>
      </div>

     
      <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-danger w-50">Register</button>
      </div>
    </form>

    <div class="text-center mt-3">
      <a href="/auth/login" class="text-decoration-none">&larr; Back to Login Page</a>
    </div>
  </div>
</div>
 <script src="/js/user/signupValidation.js"></script>