<link rel="stylesheet" href="/css/profile.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="container my-5" style="margin-left: 0px;">
  <div class="row">

    <!-- Sidebar -->
    <div class="col-md-3">
      <div class="p-3 shadow-sm bg-white rounded">
        <h5 class="fw-bold text-dark border-bottom pb-2 mb-3 text-center">My Account</h5>
        <div class="list-group border-0 text-center">
          <a href="/profile" class="list-group-item border-0 list-group-item-action">Profile</a>
          <a href="/orders" class="list-group-item border-0 list-group-item-action">Orders</a>
          <a href="/address" class="list-group-item border-0 list-group-item-action">Your Address</a>
          <a href="/wishlist" class="list-group-item border-0 list-group-item-action">Wishlist</a>
          <a href="/wallet" class="list-group-item border-0 list-group-item-action active">Wallet</a>
          <a href="/coupons" class="list-group-item border-0 list-group-item-action">Coupons</a>
          <a href="/logout" class="list-group-item border-0 list-group-item-action text-danger fw-semibold">Logout</a>
        </div>
      </div>
    </div>

    <!-- Wallet Section -->
    <div class="col-md-9">

      <h3 class="mb-4 fw-bold">My Wallet</h3>

      <!-- Wallet Payment Card -->
      <div class="card mb-4 shadow-sm">
        <div class="card-body text-center">


    <div class="p-3 mb-3 rounded text-white text-center" style="background-color: #139032;">
      <h5 class="mb-1">Available Wallet Balance</h5>
      <h3 class="mb-0 fw-bold">₹ {{wallet.balance}}</h3>
    </div>
<!--
          <button
            class="btn btn-success btn-lg w-100"
            id="walletPayBtn"
            data-order-id="{{orderId}}"
            data-amount="{{payableAmount}}"
          >
            Pay ₹ {{payableAmount}} Using Wallet
          </button> -->
        </div>
      </div>

      <!-- Transaction History -->
      <div class="card shadow-sm">
        <div class="card-header">
          <h5 class="mb-0">Transaction History</h5>
        </div>

        <div class="card-body p-0">
          {{#if transactions.length}}
          <table class="table mb-0">
            <thead class="table-light">
              <tr>
                <th>Date</th>
                <th>Title</th>
                <th>Payment Method</th>
                <th>Amount</th>
                <th>Status</th>
              </tr>
            </thead>

            <tbody>
              {{#each transactions}}
              <tr>
                <td>{{this.formattedDate}}</td>
                <td>{{this.title}}</td>
                <td>{{this.payment_method}}</td>
                <td>₹ {{this.amount}}</td>
                <td
                  class="
                    {{#if (eq this.status 'success')}}text-success{{/if}}
                    {{#if (eq this.status 'failed')}}text-danger{{/if}}
                    {{#if (eq this.status 'pending')}}text-warning{{/if}}
                  "
                >
                  {{this.status}}
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
          {{else}}
          <p class="text-center p-3">No wallet transactions found</p>
          {{/if}}
        </div>
      </div>

    </div>
  </div>
</div>

<script src="/js/user/walletPay.js"></script>


